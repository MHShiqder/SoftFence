{% assign list_class = "relative  py-1  hover:font-semibold text-white hover:cursor-pointer 
           after:content-[''] after:absolute after:left-0 after:bottom-0 
           after:h-[2px] after:bg-gradient-to-r after:from-[#38A59D] after:to-[#3D4C63] 
           after:w-0 after:transition-all after:duration-300 hover:after:w-full" %}  

  <header>
    <h2 class="header__title flex {% if section.settings.logo_style == '1' %} order-0{% else %}order-1 justify-center{% endif %}  w-1/3">
      {% if section.settings.logo %}
        <a href="{{ routes.root_url }}">
          <img
            src="{{ section.settings.logo|image_url:  width:200}}"
            alt="{{ section.settings.logo.alt|default: shop.name }}"
            class="header_logo"
            width="200px"
            height="200px"
          >
        </a>
      {% elsif section.settings.custom_text != blank %}
        <a href="{{ routes.root_url }}">
          {{ section.settings.custom_text }}
        </a>
      {% else %}
        {{ shop.name | link_to: routes.root_url }}
      {% endif %}
    </h2>

    
    {% comment %} large device menu  {% endcomment %}
    <div class="header__menu lg:flex gap-2 hidden  {% if section.settings.logo_style == '1' %} order-1 justify-center {% else %}order-0 {% endif %}  w-1/3">
      {% for link in section.settings.menu.links %}
        <ul class="">
          <li class="{{ list_class }}">
            {{ link.title | link_to: link.url }}
          </li>
        </ul>
      {% endfor %}
    </div>
    {% comment %} large device menu  {% endcomment %}
    <div class="header__menu flex lg:hidden flex-col order-[-1] gap-2 ">
      {% for link in section.settings.menu.links %}
        <ul class="">
          <li class="{{ list_class }}">
            {{ link.title | link_to: link.url }}
          </li>
        </ul>
      {% endfor %}
    </div>

    <div class="header__icons order-3 w-1/3 justify-end">
      {% if shop.customer_accounts_enabled %}
        {{ 'icon-account.svg' | inline_asset_content | link_to: routes.account_url }}
      {% endif %}

      <a href="{{ routes.cart_url }}">
        {% if cart.item_count > 0 %}
          <sup>{{ cart.item_count }}</sup>
        {% endif %}

        {{ 'icon-cart.svg' | inline_asset_content }}
      </a>
    </div>
  </header>


{% stylesheet %}
  header {
    height: 5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  header a {
    position: relative;
    text-decoration: none;
    color: var(--color-foreground);
  }
  header a sup {
    position: absolute;
    left: 100%;
    overflow: hidden;
    max-width: var(--page-margin);
  }
  header svg {
    width: 2rem;
  }
  
  header .header__icons {
    display: flex;
    gap: 1rem;
  }

  .header_logo {
    max-height: 40px;
    height: auto;
    width: auto;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:labels.menu",
      "default": "main-menu"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo Image"
    },
    {
      "type": "text",
      "id": "custom_text",
      "label": "Custom Header Text"
    },
    {
      "type": "select",
      "id": "logo_style",
      "label": "Select Logo Position",
      "options": [
        {
          "value": "1",
          "label": "Left"
        },
        {
          "value": "2",
          "label": "Middle"
        }
      ],
      "default": "1"
    }
  ]
}
{% endschema %}
